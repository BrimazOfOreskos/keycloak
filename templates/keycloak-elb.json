{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "Application": {
            "Type": "String",
            "AllowedValues": [
                "keycloak"
            ],
            "Default": "keycloak"
        },
        "Project": {
            "Type": "String",
            "AllowedValues": [
                "oreskos"
            ],
            "Default": "oreskos"
        },
        "Subnets": {
            "Type": "List<AWS::EC2::Subnet::Id>",
            "Description": "List of public subnets from which the load balancer will accept traffic"
        },
        "Vpc": {
            "Type": "AWS::EC2::VPC::Id",
            "Description": "Id of VPC for deployment"
        }
    },
    "Resources": {
        "ElbSg": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Permits outside access to the Keycloak Elastic Load Balancer",
                "GroupName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "Project"
                            },
                            {
                                "Ref": "Application"
                            },
                            "elb"
                        ]
                    ]
                },
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "Description": "Allow tcp/80 from all",
                        "FromPort": 80,
                        "IpProtocol": "tcp",
                        "ToPort": 80
                    }
                ],
                "Tags": [
                    {
                        "Key": "Project",
                        "Value": {
                            "Ref": "Project"
                        }
                    },
                    {
                        "Key": "Application",
                        "Value": {
                            "Ref": "Application"
                        }
                    }
                ],
                "VpcId": {
                    "Ref": "Vpc"
                }
            }
        },
        "ApplicationElb": {
            "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
            "Properties": {
                "AccessLoggingPolicy": {
                    "Enabled": true,
                    "S3BucketName": {
                        "Fn::Join": [
                            "-",
                            [
                                {
                                    "Ref": "Project"
                                },
                                {
                                    "Ref": "Application"
                                }
                            ]
                        ]
                    }
                },
                "HealthCheck": {
                    "HealthyThreshold": "5",
                    "Interval": "300",
                    "Target": "HTTP:8080/health",
                    "Timeout": "5",
                    "UnhealthyThreshold": "2"
                },
                "Instances": [],
                "Listeners": [
                    {
                        "InstancePort": "8080",
                        "InstanceProtocol": "HTTP",
                        "LoadBalancerPort": "80",
                        "Protocol": "HTTP"
                    }
                ],
                "LoadBalancerName": "keycloak",
                "Scheme": "internet-facing",
                "SecurityGroups": [
                    {
                        "Ref": "ElbSg"
                    }
                ],
                "Subnets": {
                    "Ref": "Subnets"
                },
                "Tags": [
                    {
                        "Key": "Project",
                        "Value": {
                            "Ref": "Project"
                        }
                    },
                    {
                        "Key": "Application",
                        "Value": {
                            "Ref": "Application"
                        }
                    }
                ]
            }
        }
    }
}
